include test2.totem;

function whileLoop()
{
    print("While Loop");
    print("---");

    $c = 10;

    while($c)
    {
        print($c);
        $c--;
    }

    print($c);
    assert($c == 0);

    print("---");
}

function doWhileLoop()
{
    print("Do While Loop");
    print("---");

    $a = 20;
    $numLoops = 0;

    do
    {
        print($a);
        $a--;
    }
    while($a);

    print($a);
    assert($a == 0);

    print("---");
}

function forLoop()
{
    print("For Loop");
    print("---");

    for($i = 0; $i < 30; $i++)
    {
        print($i);
    }

    assert($i == 30);

    print("---");
}

function ifBlock()
{
    print("If Block");
    print("---");
    $x = 0;

    if($x < 0)
    {
        print("Less Than");
    }
    else if($x > 0)
    {
        print("More Than");
    }
    else
    {
        print("Equals");
    }

    print("---");
}

function intFloat()
{
    print("Int Float Test");
    print("---");
    $f = 1;
    print($f);

    $b = $f + 0.5;
    print($b);

    assert($b == 1.5);

    $c = 12.4;
    print($c);

    $d = $c + 5;
    print($d);

    assert($d == 17.4);

    print("---");
}

function nullTest()
{
    print("Null Test");
    print("---");
    $g = null;
    print($g);

    assert($g == null);

    print("---");
}

