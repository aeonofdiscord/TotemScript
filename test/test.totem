

function whileLoop()
{
    $a = 10;

    while($a)
    {
        print($a);
        $a--;
    }

    print($a);
}

function doWhileLoop()
{
    $a = 20;

    do
    {
        print($a);
        $a--;
    }
    while($a);
}

function forLoop()
{
    for($i = 0; $i < 30; $i++)
    {
        print($i);
    }
}

function ifBlock()
{
    if(1 - 2 > 0)
    {
        print(1);
    }
    else if(3 == 0)
    {
        print(0);
    }
    else
    {
        print(2);
    }
}

function test()
{
    whileLoop();
    doWhileLoop();
    forLoop();
    ifBlock();
}